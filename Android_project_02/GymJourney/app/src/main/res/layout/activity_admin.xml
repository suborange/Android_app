<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GymJourney.AdminActivity"
    android:background="#22314E">


    <View
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/table_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/workout_icon"
        android:layout_width="118dp"
        android:layout_height="68dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/android_icon_gj_trans3"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        />





    <!--    "Admin "-->
    <TextView
        android:id="@+id/Admin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textSize="50sp"
        android:textColor="#FAF8D9"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/workout_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />




    <!--    BUTTON TO MANAGE ACCOUNTS-->
    <Button
        android:id="@+id/manageacc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage accounts"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:padding="15sp"
        android:textColor="#FAF8D9"
        android:backgroundTint="#355E3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Admin_text"
        android:layout_marginTop="50dp"

        />

    <!--    BUTTON TO DO NOTHING A SPECIAL BUTTON FOR ADMINS ONLY!-->
    <Button
        android:id="@+id/special_ad_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="press your luck"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:padding="15sp"
        android:textColor="#FAF8D9"
        android:backgroundTint="#355E3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageacc_button"
        android:layout_margin="50dp"

        />

    <!--    LOGOUT ( back to main)-->
    <Button
        android:id="@+id/logout_admin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FAF8D9"
        android:backgroundTint="#A42A04"
        android:fontFamily="serif"
        android:padding="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="95dp"

        />



    <!--    "App Info "-->
    <TextView
        android:id="@+id/app_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textSize="11sp"
        android:textColor="#FAF8D9"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        />

    <!--    "secret text"-->
    <TextView
        android:id="@+id/secret_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secret_text"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textSize="8sp"
        android:textColor="#FAF8D9"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>